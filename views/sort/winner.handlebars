<script>
    window.onload = function(){
        startConfetti()
    }

    function backToHome(){
        window.location.href= '/'
    }

    function startConfetti(){
    let counter = 0
        const interval = setInterval(function(){
            counter++
            confetti()
            if(counter == 20){
                clearInterval(interval)
            }
        }, 50)
    }
</script>